procedure GravaIni(aTexto: string);
var
  ArqIni: TIniFile;
begin
  ArqIni := TIniFile.Create('C:\DADOS\Informatica\Info_projetos\Curso_Delphi_XE7\Parte9_Arquivos_INI_2\Arquivo.ini');
  try
    ArqIni.WriteString('Dados', 'Texto', aTexto);
  finally
    ArqIni.Free;
  end;
end;

procedure LeIni(var aTexto: string);
var
  ArqIni: TIniFile;
begin
  ArqIni := TIniFile.Create('C:\DADOS\Informatica\Info_projetos\Curso_Delphi_XE7\Parte9_Arquivos_INI_2\Arquivo.ini');
  try
    aTexto := ArqIni.ReadString('Dados', 'Texto', aTexto);
  finally
    ArqIni.Free;
  end;
end;

{$R *.fmx}

procedure TForm1.Button1Click(Sender: TObject);
begin
GravaINI('Teste');
end;

end.
